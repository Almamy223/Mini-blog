<% include partials/header.ejs %>

<div id="container">
    <form action="/posts/<%=id%>?method=put" method="POST">
        <h1>Modify post</h1>
        
        <label><b>Title</b>
            <input type="text" value="<%=title%>" name="title"/>
        </label>
        
        <label><b>Image</b>
            <input type="text" value="<%=image%>" name="image"/>
        </label>
      
        <label><b>Content</b>
            <textarea name="content" rows="10" cols="70"><%=content%></textarea>
        </label>
        
        <input type="submit" value="Publish"/>
    </form>
</div>

